# Environment Variables for Wrencos Chat Assistant

# Google Gemini API Configuration (required for AI chat functionality)
GEMINI_API_KEY= 'your-GEMINI_API_KEY'

# MongoDB Configuration (if not already set)
MONGODB_URI=mongodb+srv://mongo-api:'your_password'@cluster0.18pi3.mongodb.net/Wrencos?retryWrites=true&w=majority

# JWT Configuration (if not already set)
JWT_SECRET=your_jwt_secret_here

# Application Configuration
NODE_ENV=development
PORT=3000

# Email Configuration (Gmail SMTP)
# Instructions:
# 1. Use your Gmail address
# 2. Generate an App Password (not your regular password):
#    - Go to Google Account settings
#    - Security > 2-Step Verification (must be enabled)
#    - App passwords > Select app: Mail > Generate password
#    - Use the 16-character password here
GMAIL_USER=your-email@gmail.com
GMAIL_APP_PASSWORD=your-16-char-app-password
COMPANY_NAME=Wrencos
FRONTEND_URL=http://localhost:5173

VNP_TMN_CODE=your_sandbox_tmn_code
VNP_HASH_SECRET=your_sandbox_secret
VNP_URL=https://sandbox.vnpayment.vn/paymentv2/vpcpay.html
VNP_RETURN_URL=http://localhost:3000/payments/vnpay/return
